	</sql>
	<!-- 添加服装类型 -->
	<insert id="insertAppClothClass" parameterType="com.cn.zyrs.domain.AppClothClass" >
	    insert into APP_ClothClass (CLOTHCLASSID, CLOTHCLASSENGNAME, CLOTHCLASSCNNAME, CLOTHCLASSSEX)
	    values (newid(), #{clothclassengname,jdbcType=VARCHAR}, #{clothclasscnname,jdbcType=VARCHAR}, #{clothclasssex,jdbcType=VARCHAR})
	</insert>
	
	<!-- 删除服装类型-->
	<delete id="deleteAppClothClass" parameterType="java.lang.String" >
